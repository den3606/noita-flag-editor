{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "noita-flag-editor",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": ["**"],
        "writeFile": true,
        "readDir": true,
        "readFile": true,
        "removeFile": true,
        "exists": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "noita-flag-editor",
        "width": 760,
        "height": 630,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.den3606.noita-flag-editor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
